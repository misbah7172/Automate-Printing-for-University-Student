# MongoDB Configuration

# MongoDB Connection URL
# For local development (if you have MongoDB installed locally)
MONGODB_URI=mongodb://localhost:27017/autoprint

# For MongoDB Atlas (cloud) - replace with your actual connection string
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/autoprint?retryWrites=true&w=majority

# For Docker MongoDB
# MONGODB_URI=mongodb://localhost:27017/autoprint

# Database name (extracted from URI if not specified)
DB_NAME=autoprint

# Connection options
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=5
MONGODB_MAX_IDLE_TIME_MS=30000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

# Enable/disable MongoDB features
MONGODB_USE_NEW_URL_PARSER=true
MONGODB_USE_UNIFIED_TOPOLOGY=true